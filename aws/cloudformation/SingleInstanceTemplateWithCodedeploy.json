  "Resources": {
    "WebServer": {
      "Type": "AWS::EC2::Instance",
      "Metadata": {
        "AWS::CloudFormation::Authentication": {
			"GithubCredentials": {
				"type": "basic",
				"username": { "Ref": "GitUser" },
				"password": { "Ref": "GitPassword" },
				"uris": ["github.com"]
			}
		},
        "AWS::CloudFormation::Init": {
          "configSets": {
            "full_install": [
              "install_cfn",
              "create_appuser",
              "install_git",
              "install_mysql",
              "configure_mysql",
              "install_ruby_and_rails",
              "install_codedeploy",
              "install_application"
            ]
          },
          "install_cfn": {
            "files": {
              "/etc/cfn/cfn-hup.conf": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "[main]\n",
                      "stack=",
                      {
                        "Ref": "AWS::StackId"
                      },
                      "\n",
                      "region=",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              },
              "/etc/cfn/hooks.d/cfn-auto-reloader.conf": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "[cfn-auto-reloader-hook]\n",
                      "triggers=post.update\n",
                      "path=Resources.WebServer.Metadata.AWS::CloudFormation::Init\n",
                      "action=/opt/aws/bin/cfn-init -v ",
                      "         --stack ",
                      {
                        "Ref": "AWS::StackName"
                      },
                      "         --resource WebServer ",
                      "         --configsets full_install ",
                      "         --region ",
                      {
                        "Ref": "AWS::Region"
                      },
                      "\n",
                      "runas=root\n"
                    ]
                  ]
                }
              }
            },
            "services": {
              "sysvinit": {
                "cfn-hup": {
                  "enabled": "true",
                  "ensureRunning": "true",
                  "files": [
                    "/etc/cfn/cfn-hup.conf",
                    "/etc/cfn/hooks.d/cfn-auto-reloader.conf"
                  ]
                }
              }
            }
          },
          "install_mysql": {
            "packages": {
              "yum": {
                "mysql": [],
                "mysql-server": [],
                "mysql-devel": [],
                "mysql-libs": []
              }
            },
            "files": {
              "/tmp/setup.mysql": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "CREATE USER '",
                      {
                        "Ref": "DBUser"
                      },
                      "'@'localhost' IDENTIFIED BY '",
                      {
                        "Ref": "DBPassword"
                      },
                      "';\n",
                      "GRANT ALL ON ",
                      {
                        "Ref": "DBName"
                      },
                      ".* TO '",
                      {
                        "Ref": "DBUser"
                      },
                      "'@'localhost';\n",
                      "FLUSH PRIVILEGES;\n"
                    ]
                  ]
                },
                "mode": "000400",
                "owner": "root",
                "group": "root"
              }
            },
            "services": {
              "sysvinit": {
                "mysqld": {
                  "enabled": "true",
                  "ensureRunning": "true"
                }
              }
            }
          },
          "configure_mysql": {
            "files": {
              "/var/apps/mymoney/mysql-git-backup.sh": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "#!/bin/bash -e\n",
                      "export HOME=/home/mymoney\n",
                      "export PATH=$PATH:/usr/local/bin\n",
                      "export DBName=",
                      {
                        "Ref": "DBName"
                      },
                      "\n",
                      "export DBUser=",
                      {
                        "Ref": "DBUser"
                      },
                      "\n",
                      "export DBPassword=",
                      {
                        "Ref": "DBPassword"
                      },
                      "\n",
                      "cd /var/apps/mymoney\n",
                      "stamp=`date +\"%s\"`\n",
                      "filename=\"${stamp}_${DBName}.sql.gz\"\n",
                      "cd /var/apps/mymoney/mymoney-db-backups\n",
                      "mysqldump -u ${DBUser} -p${DBPassword} --force --opt --databases ${DBName} | gzip -c > ${filename}\n",
                      "rm `ls -1 *.gz | sort -r | awk 'NR>3'`\n",
                      "git add .\n",
                      "git commit -am \"adding ${filename}\"\n",
                      "/var/apps/mymoney/push_to_git\n"
                    ]
                  ]
                },
                "mode": "000500",
                "owner": "root",
                "group": "root"
              },
              "/var/apps/mymoney/mysql-restore-backup.sh": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "#!/bin/bash -e\n",
                      "export HOME=/home/mymoney\n",
                      "export PATH=$PATH:/usr/local/bin\n",
                      "export DBName=",
                      {
                        "Ref": "DBName"
                      },
                      "\n",
                      "export DBUser=",
                      {
                        "Ref": "DBUser"
                      },
                      "\n",
                      "export DBPassword=",
                      {
                        "Ref": "DBPassword"
                      },
                      "\n",
                      "cd /var/apps/mymoney\n",
                      "if [ ! -d mymoney-db-backups ]; then\n",
                      "  git clone -b master https://github.com/iDreamOn/mymoney-db-backups.git\n",
                      "  cd mymoney-db-backups\n",
                      "  latest=`ls *.gz | sort | tail -1`\n",
                      "  gunzip < ${latest} | mysql -u${DBUser} -p${DBPassword} ${DBName}\n",
                      "fi\n"
                    ]
                  ]
                },
                "mode": "000500",
                "owner": "root",
                "group": "root"
              },
              "/var/apps/mymoney/push_to_git": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "#!/usr/bin/expect\n",
                      "spawn git push origin master\n",
                      "expect \"Username for 'https://github.com':\"\n",
                      "send \"",
                      {
                        "Ref": "GitUser"
                      },
                      "\r\"\n",
                      "expect \"Password for 'https://emthomas@github.com':\"\n",
                      "send \"",
                      {
                        "Ref": "GitPassword"
                      },
                      "\r\"\n",
                      "interact\n"
                    ]
                  ]
                },
                "mode": "000500",
                "owner": "root",
                "group": "root"
              },
              "/tmp/contab": {
                "content": {
                  "Fn::Join": [
                    "",
                    [
                      "@daily /var/apps/mymoney/mysql-git-backup.sh\n"
                    ]
                  ]
                },
                "mode": "000500",
                "owner": "root",
                "group": "root"
              }
            },
            "commands": {
              "01_set_mysql_root_password": {
                "command": {
                  "Fn::Join": [
                    "",
                    [
                      "mysqladmin -u root password '",
                      {
                        "Ref": "DBRootPassword"
                      },
                      "'"
                    ]
                  ]
                },
                "test": {
                  "Fn::Join": [
                    "",
                    [
                      "$(mysql ",
                      {
                        "Ref": "DBName"
                      },
                      " -u root --password='",
                      {
                        "Ref": "DBRootPassword"
                      },
                      "' >/dev/null 2>&1 </dev/null); (( $? != 0 ))"
                    ]
                  ]
                }
              },
              "02_update_mysql_tzinfo": {
                "command": {
                  "Fn::Join": [
                    "",
                    [
                      "mysql_tzinfo_to_sql /usr/share/zoneinfo | mysql -u root --password='",
                      {
